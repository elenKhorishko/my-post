{% extends 'base.html.twig' %}
{% block title %}
    Читаем пост - {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container">
        <h2>Читаем пост полностью</h2>

            {{ post.data|date("m.d.Y - G:i") }} <br>
            <h2>{{ post.title }} </h2><br>
            {{ post.text }} <br><br>
        <div class="card">
                <div class="card-header">
                    <h3>Комментарии:</h3><hr>
                </div>
                    {% for comment in post.comments %}
                    {{ comment.dataComm|date("m.d.Y - G:i") }} <br>
                <div class="card-body">
                    <h5 class="card-title">nikName: {{ comment.nikName }}</h5><br>
                    <p class="card-text">{{ comment.textComm }} </p><br>
                    {%  endfor %}

                    <a href="{{ path('add_comm', {'id': post.id }) }}" class="btn btn-primary">Добавить комментарий</a><br><br>
                    <a href="{{ path('redact', {'id': post.id }) }}" class="btn btn-primary">Править пост</a> <br><br>
                    <a href="{{ path('homepage') }}"class="btn btn-primary">Вернуться на главную</a> <br><br>
                </div>
         </div>
    </div>
{% endblock body %}