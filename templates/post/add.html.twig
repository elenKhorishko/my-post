{% extends 'base.html.twig' %}

{% block title %}
    Добавляем пост - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        {% for message in app.flashes('info') %}
            <p>{{ message }}</p>
        {% endfor %}

        <h1>Добавить новый пост</h1>

        <div class="row">
            <div class="col-xs-12 col-md-5">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary btn">Сохранить</button>
                {{ form_end(form) }}

                <a href="{{ path('homepage') }}"><button type="submit" class="btn btn-default btn-lg">
                        Вернуться на главную
                    </button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}

